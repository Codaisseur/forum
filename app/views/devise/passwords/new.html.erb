<div class="col-md-6 col-md-offset-3">
    <div class="text-center">
       <h2>Codaisseur forum</h2>
       <p>Start getting answers to your questions.</p>
    </div>
    <div class="devise-wrapper">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'form-group') do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-codaisseur pull-right'  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
</div>