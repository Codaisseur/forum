<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="text-center">
        <h2 class="margin-top-lg"><b>Codaisseur forum</b></h2>
       <p>Start getting answers to your questions.</p>
    </div>
    <div class="devise-wrapper">
    <h2 class="text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'form-group') do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="actions">
        <%= f.submit "Reset password", class: 'btn btn-codaisseur pull-right'  %>
      </div>
    <% end %>
    <br>
    <br>
    </div>
</div>