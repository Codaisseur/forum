<div class="col-md-6 col-md-offset-3">
    <div class="text-center">
       <h2>Codaisseur forum</h2>
       <p>Start getting answers to your questions.</p>
    </div>
    <div class="devise-wrapper">
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-group') do |f| %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-codaisseur pull-right' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>