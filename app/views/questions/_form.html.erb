<%= form_for :question, url: questions_path do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.label :image_url %><br>
  <%= f.text_area :image_url %>
</p>
<div class="field">
  <%= f.label :topic_id %><br>
  <%= f.collection_select :topic_id, Topic.all, :id, :title %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
